[alias]
	ci    = commit -a
	ca    = commit -a --amend -C HEAD
	co    = checkout
	cp    = cherry-pick -x
	root  = checkout origin/master
	# These are all great git helper commands from Chromium's depot_tools
	reup  = rebase-update
	udiff	= upstream-diff
	bmap  = map-branches -vvv
	nb    = new-branch
	tb    = new-branch --upstream_current
[push]
	default = upstream
[transfer]
	fsckobjects = true
[fetch]
	fsckobjects = true
[receive]
	fsckObjects = true
